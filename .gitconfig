[user]
    email = $$$<email>$$$
    name = $$$<name>$$$
	signingkey = $$$<KEY>$$$
[svn]
    rmdir = true
[svm]
    rmdir = true

# Aliases for common git commands. E.g., enter "git d" for "git diff"
# These settings live in the ~/.gitconfig file.

[alias]
        a = add
        b = branch
        #ba = branch -a
        co = commit
        ch = checkout
        d = diff
        dc = diff --cached
        #fp = format-patch
        g = !git gui &
        lb = log --graph  --show-signature
        ls = log --graph --pretty=oneline --abbrev-commit  --show-signature -n 15
        lc = log ORIG_HEAD.. --stat --no-merges
        k = !gitk &
        ka = !gitk --all &
        #lp = log --patch-with-stat
        mnf = merge --no-ff
        #mnff = merge --no-ff
        mt = mergetool
        pat = format-patch -1
        re = reset
        reb = rebase
        serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
        sra = svn rebase --all
        sh = !git-sh
        s = status
        stm = status --untracked=no
        stfu = status --untracked=no
        pullsrb = !git stash save && git pull --rebase && git stash pop && echo 'Success!'

[core]
	editor = /usr/bin/vim
	pager = diff-so-fancy | less --tabs=4 -RFX
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse
[commit]
	gpgsign = true
[gpg]
	program = gpg
