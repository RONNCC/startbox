[user]
    email = <CHANGEME>
    name = <CHANGEME>
    signingkey = <CHANGEME>
[svn]
    rmdir = true
[svm]
    rmdir = true

# Aliases for common git commands. E.g., enter "git d" for "git diff"
# These settings live in the ~/.gitconfig file.

[alias]
        a = add
        b = branch
        #ba = branch -a
	bl = git for-each-ref --sort=-committerdate refs/heads/ --format='%(refname:short): %(authorname) - %(contents:subject)'
        co = commit
        ch = checkout
        d = diff
        dc = diff --cached
        #fp = format-patch
        g = !git gui &
        lb = log --graph  --show-signature
        ls = log --graph --pretty='format:%C(auto,yellow)%h%C(auto,magenta)%  %G? %C(auto,green)%<(8,trunc)%aN %C(auto,reset)%s? %s'  -n 15
        lc = log ORIG_HEAD.. --stat --no-merges
        k = !gitk &
        ka = !gitk --all &
        #lp = log --patch-with-stat
        mnf = merge --no-ff
        #mnff = merge --no-ff
        mt = mergetool
        pat = format-patch -1
        re = reset
        rb = rebase
        fixup = !export NOTFXPCOM=$(git log  --no-decorate --oneline -n 20 | grep -v 'fixup' | head -n 1 | cut -d' ' -f1) && sh -c "echo 'FX'$NOTFXPCOM && git commit --fixup $NOTFXPCOM && GIT_SEQUENCE_EDITOR=true git rebase -i --autosquash $NOTFXPCOM^"
        serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
        sra = svn rebase --all
        sh = !git-sh
        s = status
        stm = status --untracked=no
        stfu = status --untracked=no
        pullsrb = !git stash save && git pull --rebase && git stash pop && echo 'Success!'

[core]
	editor = /usr/bin/vim
	pager = diff-so-fancy | less --tabs=4 -RFX
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse
[commit]
	gpgsign = true
[gpg]
	program = gpg
